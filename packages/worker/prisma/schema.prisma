generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Team {
  id       Int        @id @default(autoincrement())
  name     String
  Resource Resource[]
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  Resource Resource[]
}

model Resource {
  title       String   @db.VarChar(1024)
  href        String   @id @db.VarChar(600)
  type        String   @db.TinyText
  size        String   @db.TinyText
  magnet      String   @db.MediumText
  fansubId    Int?
  publisherId Int
  createdAt   BigInt
  fansub      Team?    @relation(fields: [fansubId], references: [id])
  publisher   User     @relation(fields: [publisherId], references: [id])
  anitomy     Anitomy?

  @@index([createdAt(sort: Desc)])
}

model Anitomy {
  href    String  @id @db.VarChar(600)
  title   String  @db.TinyText
  episode Int?
  type    String? @db.TinyText
  meta    Json?

  Resource Resource @relation(fields: [href], references: [href])
}
