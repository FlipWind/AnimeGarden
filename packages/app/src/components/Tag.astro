---
export interface Props {
  text: string;
  color?: string;
  className?: string;
}

const { text, className = '', color = 'bg-gray-200' } = Astro.props;
---

<span
  class={`
  inline-flex items-center gap1
  rounded-md px2 py1 font-mono
  transition transition-colors
  text-base-800 ${color} ${className}`}
>
  {text}
</span>