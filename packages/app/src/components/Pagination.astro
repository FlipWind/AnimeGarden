---
export interface Props {
  page: number;

  href: (page: number) => string;
}

const { page, href } = Astro.props;
---

<div class="flex justify-around mt4 text-base-500 text-lg">
  <div>
    <a
      href={page > 1 ? href(page - 1) : ''}
      class="underline underline-dotted text-link-active"
      aria-label="Go to previous page">上一页</a
    >
  </div>
  <div>第 {page} 页</div>
  <div>
    <a
      href={href(page + 1)}
      class="underline underline-dotted text-link-active"
      aria-label="Go to next page">下一页</a
    >
  </div>
</div>
